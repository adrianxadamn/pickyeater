<!DOCTYPE html>
<html>
  <head>
    <%- include('../partials/head') %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.5/css/materialize.min.css">
  </head>
  <body>
    <%- include('../partials/navbar') %>
    <h1 id='<%= wishlist._id%>'><%= `${wishlist.title}`%></h1>
    <button data-target="restaurant-modal" class="random-wishlist-btn btn-large #03a9f4 light-blue random-button center-align" value="<%= wishlist._id%>">RANDOMIZER</button>
    <ul class="grab-me">
      <% for (var i = 0; i < wishlist.restaurants.length; i++) { %>
      <li>
        <div class="card-medium #00796b teal darken-2">
          <div class="card-content show-card white-text">
            <h2 class="restaurant-name"><%= `${wishlist.restaurants[i].name}` %></h2>
            <ul>
              <li><img src="<%= `${wishlist.restaurants[i].picture_url}` %>"> </li>
              <li><span class="card-title"><%=`Cuisine: ${wishlist.restaurants[i].cuisine}`%></span> </li>
              <li><img src="<%= `${wishlist.restaurants[i].rating_img_url}` %>"> </li>
              <li class="address"><%=`${wishlist.restaurants[i].address}`%></li>
              <a href="<%=`${wishlist.restaurants[i].url}`%>">Yelp Info</a>
            </ul>
            <button class="btn waves-effect #e53935 red darken-1 remove-rs" data-id=<%=`${wishlist.restaurants[i].id}`%> >Remove Restaurant From List</button>
          </div>
        </div>
      </li>
      <% }; %>
    </ul>
    <div id="restaurant-modal" class="modal">
      <div class="modal-content #00796b teal darken-2"></div>
      <div class="modal-footer #00796b teal darken-2">
       <button id="re-randomize" class="waves-effect waves-green btn">REDO</a>
      </div>
    </div>
    <%- include('../partials/scripts') %>
    <script src="../js/wishlist_index.js"></script>
    <script src="../js/show_randomizer.js"></script>
  </body>
</html>

